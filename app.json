{
  "name": "newgirl-backend",
  "description": "NewGirl Platform Core Service - AI Girlfriend Backend",
  "repository": "https://github.com/your-username/newgirl-back",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "nestjs", "mongodb", "websocket", "stripe"],
  "image": "heroku/nodejs",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "mongolab:sandbox",
      "as": "MONGODB"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "JWT secret key for authentication",
      "generator": "secret"
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string",
      "required": true
    },
    "STRIPE_SECRET_KEY": {
      "description": "Stripe secret key for payments",
      "required": true
    },
    "STRIPE_WEBHOOK_SECRET": {
      "description": "Stripe webhook endpoint secret",
      "required": true
    },
    "EMAIL_HOST": {
      "description": "SMTP email host",
      "required": false
    },
    "EMAIL_PORT": {
      "description": "SMTP email port",
      "value": "587"
    },
    "EMAIL_USER": {
      "description": "SMTP email username",
      "required": false
    },
    "EMAIL_PASS": {
      "description": "SMTP email password",
      "required": false
    },
    "CONFIRMO_API_KEY": {
      "description": "Confirmo API key for crypto payments",
      "required": false
    },
    "CONFIRMO_CALLBACK_PASSWORD": {
      "description": "Confirmo webhook callback password",
      "required": false
    }
  },
  "scripts": {
    "postdeploy": "echo 'Deployment completed successfully!'"
  }
}
